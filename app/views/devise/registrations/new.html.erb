<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="w-100" style="max-width: 500px; padding: 2rem;">
    <h2 class="text-center mb-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :type, "I am a" %>
        <%= f.select :type,
              options_for_select([['Car Owner', 'CarOwner'], ['Garage Admin', 'GarageAdmin']]),
              {}, class: "form-control", id: "user_type_select" %>
      </div>

      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- Garage-specific fields -->
      <div id="garage_fields" style="display: none;">
        <div class="mb-3">
          <%= f.label :garage_name %>
          <%= f.text_field :garage_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :license_number %>
          <%= f.text_field :license_number, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :pincode %>
          <%= f.text_field :pincode, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :max_capacity_per_day %>
          <%= f.text_field :max_capacity_per_day, class: "form-control" %>
        </div>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", class: "btn btn-primary px-5" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
