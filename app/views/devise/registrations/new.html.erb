<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :type, "I am a" %>
    <%= f.select :type,
          options_for_select([['Car Owner', 'CarOwner'], ['Garage Admin', 'GarageAdmin']]),
          {}, class: "form-control", id: "user_type_select" %>
  </div>

  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <!-- Garage-specific fields, hidden by default -->
  <div id="garage_fields" style="display: none;">
    <div class="mb-3">
      <%= f.label :garage_name %>
      <%= f.text_field :garage_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :license_number %>
      <%= f.text_field :license_number, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :pincode %>
      <%= f.text_field :pincode, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :max_capacity_per_day %>
      <%= f.text_field :max_capacity_per_day, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<!-- JavaScript to show/hide garage fields -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const userType = document.getElementById("user_type_select");
    const garageFields = document.getElementById("garage_fields");

    function toggleGarageFields() {
      garageFields.style.display = (userType.value === "GarageAdmin") ? "block" : "none";
    }

    userType.addEventListener("change", toggleGarageFields);
    toggleGarageFields(); // call on load
  });
</script>
