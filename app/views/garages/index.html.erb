<h2>My Garage</h2>

<ul class="list-group">
  <% @garages.each do |garage| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to garage.garage_name, garage_path(garage), class: "text-decoration-none" %>
      <span class="badge bg-secondary"><%= garage.bookings.count %> bookings</span>
    </li>
  <% end %>
</ul>
